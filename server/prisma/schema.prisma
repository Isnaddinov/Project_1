// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["extendedWhereUnique"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id       Int    @id @default(autoincrement())
  name     String
  username String
  password String
  role     role   @default(user)
}

model basket {
  id     Int @id @default(autoincrement())
  userId Int @unique
}

model order {
  id           Int     @id @default(autoincrement())
  name         String
  surname      String
  phone        String
  viloyat      String
  tuman        String
  shahar       String
  aniq_adress  String
  umumiybahosi Decimal
  products     Int[]
  status       String  @default("saqlangan")
  basketId     Int
}

model count {
  id        Int @id @default(autoincrement())
  productId Int
  counts    Int
  basketId  Int
}

model categories {
  id    Int     @id @default(autoincrement())
  name  String
  types types[]
}

model types {
  id           Int        @id @default(autoincrement())
  name         String
  img          String
  categoriesId Int
  products     products[]
  categories   categories @relation(fields: [categoriesId], references: [id])
}

model products {
  id      Int     @id @default(autoincrement())
  name    String
  img     String
  price   Decimal
  desc    String
  count   Int @default(0)
  typesId Int
  types   types   @relation(fields: [typesId], references: [id])
}

model banner {
  id    Int    @id @default(autoincrement())
  img   String
  title String
}

enum role {
  user
  admin
}
